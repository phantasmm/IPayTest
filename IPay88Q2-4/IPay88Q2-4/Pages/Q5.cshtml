@page
@model IPay88Q2_4.Pages.Q5Model
@{
    ViewData["Title"] = "Q5";
}
<h1>Q5</h1>
<br />
<h4>Insert Person</h4>
<form method="post">
    <div class="form-group row">
        <div class="col-sm">
            <lable>Fisrt Name: </lable>
            <input type="text" class="form-control" asp-for="FisrtName" placeholder="FisrtName" />
        </div>
        <div class="col-sm">
            <lable>Last Name: </lable>
            <input type="text" class="form-control" asp-for="LastName" placeholder="LastName" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary" 
            asp-page-handler="save">Submit</button>
    <br />
    <br />
    <h4>Person list</h4>
    <table class="table table-dark">
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Delete</th>
        </tr>

        @foreach (var i in Model.personList)
        {
            <tr>
                <td>@i.FirstName </td>
                <td>@i.LastName</td>
                <td>
                    <button class="btn btn-danger"
                            type="submit"
                            asp-page-handler="delete"
                            asp-route-id="@i.Id">
                        delete
                    </button>
                </td>
            </tr>
        }
    </table>
</form>
